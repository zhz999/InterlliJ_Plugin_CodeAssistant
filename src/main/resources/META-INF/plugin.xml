<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>CodeAssistant</id>
    <name>开发助手</name>
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <vendor email="zhanghongzhong@bytedance.com">zhanghongzhong</vendor>
    <description>
        <![CDATA[
            1. Download the Plugin
            2. Configuration ollama
            3. use CodeAssistant
        ]]>
    </description>
    <change-notes>
        <![CDATA[
            1.0.0 add CodeAssistant
            1.0.6 publish CodeAssistant : idea202225_sinceBuild222_untilBuild233*
        ]]>
    </change-notes>
    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">

        <toolWindow id="开发助手"
                    icon="com.zhz.bytedance.development_assistant_zhz.Icons.DefaultSmall"
                    anchor="right"
                    secondary="true"
                    factoryClass="com.zhz.bytedance.development_assistant_zhz.EditAction"/>

        <statusBarWidgetFactory
                order="first"
                id="dev.statusbar.widget"
                implementation="statusbar.CodeStatusBarWidgetFactory"/>

        <applicationConfigurable parentId="tools"
                                 instance="settings.CodeAssistantSettingsConfigurable"
                                 id="settings.CodeAssistantSettingsConfigurable"
                                 displayName="开发助手"/>
        <applicationService serviceImplementation="settings.CodeAssistantSettingsState"/>
    </extensions>
    <actions>
        <action id="DevAction"
                class="com.zhz.bytedance.development_assistant_zhz.DevAction"
                text="开发助手"
                popup="true"
                icon="com.zhz.bytedance.development_assistant_zhz.Icons.DefaultSmall">
            <add-to-group group-id="EditorPopupMenu1" anchor="first"/>
        </action>
        <action id="PngToicns"
                class="com.zhz.bytedance.development_assistant_zhz.PngToicns"
                popup="true"
                icon="com.zhz.bytedance.development_assistant_zhz.Icons.DefaultSmall"
                text="Png 转 Icns">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
        <action
                id="DevAction.openSettings"
                icon="com.zhz.bytedance.development_assistant_zhz.Icons.DefaultSmall"
                text="Open Settings"
                class="settings.OpenSettingsAction">
            <override-text place="MainMenu" text="Open Settings"/>
            <override-text place="popup" use-text-of-place="MainMenu"/>
        </action>
        <group id="DevAction.statusBarPopup">
            <reference id="DevAction.openSettings"/>
        </group>

    </actions>
</idea-plugin>