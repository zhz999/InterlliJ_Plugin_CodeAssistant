<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>com.zhz.bytedance.Development_Assistant_ZHZ</id>
<!--    <depends>com.example.another-plugin</depends>-->
    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>开发助手</name>
    <depends>com.intellij.modules.platform</depends>
    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="zhanghongzhong@bytedance.com" url="https://www.zhanghongzhong.com">zhanghongzhong@bytedance.com</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description>
        <![CDATA[
            <ul>
            <li><b>2.0.0</b> 开发助手 plugin.</li>
            <li><b>1.0.0</b> png 转 icns (macOS) plugin.</li>
          </ul>
        ]]>
    </description>
    <change-notes>
        <![CDATA[
          <ul>
            <li><b>2.0.0</b> ADD: png 转 icns (macOS).</li>
            <li><b>1.0.0</b> ADD: 开发助手.</li>
          </ul>
        ]]>
    </change-notes>
    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable
                id="settings.dev"
                parentId="tools"
                displayName="开发助手"
                instance="settings.GeneralSettingsConfigurable"
        />

        <toolWindow id="开发助手"
                    icon="com.zhz.bytedance.development_assistant_zhz.Icons.DefaultSmall"
                    anchor="right"
                    secondary="true"
                    factoryClass="com.zhz.bytedance.development_assistant_zhz.EditAction"/>

        <statusBarWidgetFactory
                order="first"
                id="dev.statusbar.widget"
                implementation="statusbar.DemoStatusBarWidgetFactory"/>

        <!--        https://github.com/JetBrains/intellij-sdk-code-samples/blob/main/settings/src/main/resources/META-INF/plugin.xml-->
        <applicationConfigurable parentId="tools" instance="settings.AppSettingsConfigurable"
                                 id="org.intellij.sdk.settings.AppSettingsConfigurable"
                                 displayName="SDK: Application Settings Example"/>
        <applicationService serviceImplementation="settings.AppSettingsState"/>
    </extensions>
    <actions>
        <action id="DevAction"
                class="com.zhz.bytedance.development_assistant_zhz.DevAction"
                text="开发助手"
                popup="true"
                icon="com.zhz.bytedance.development_assistant_zhz.Icons.DefaultSmall">
            <add-to-group group-id="EditorPopupMenu1" anchor="first"/>
        </action>
        <action id="PngToicns"
                class="com.zhz.bytedance.development_assistant_zhz.PngToicns"
                popup="true"
                icon="com.zhz.bytedance.development_assistant_zhz.Icons.DefaultSmall"
                text="Png 转 Icns">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
        <action
                id="DevAction.openSettings"
                icon="com.zhz.bytedance.development_assistant_zhz.Icons.DefaultSmall"
                text="Open Settings"
                class="settings.OpenSettingsAction">
            <override-text place="MainMenu" text="Open Settings"/>
            <override-text place="popup" use-text-of-place="MainMenu"/>
        </action>
        <group id="DevAction.statusBarPopup">
            <reference id="DevAction.openSettings" />
        </group>

    </actions>
</idea-plugin>